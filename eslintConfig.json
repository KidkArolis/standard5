{
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 5,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": false,
      "jsx": false
    },
    "sourceType": "script"
  },
  "plugins": [
    "promise",
    "standard"
  ],
  "env": {
    "es6": false,
    "node": false,
    "browser": true
  },
  "globals": {
    "require": true,
    "exports": true,
    "module": true
  }
}
